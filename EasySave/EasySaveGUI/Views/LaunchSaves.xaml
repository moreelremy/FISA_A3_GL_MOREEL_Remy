<Window x:Class="EasySaveGUI.LaunchSaves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        Title="EasySave LaunchSaves" 
        ResizeMode="NoResize" 
        MinWidth="973" MinHeight="661" 
        Width="973" Height="661"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Définition des couleurs -->
        <SolidColorBrush x:Key="MaCouleurPrincipale" Color="#280068"/>
    </Window.Resources>

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <!--- CONTENU DE LA PAGE-->

        <!-- HEADER -->
        <Rectangle HorizontalAlignment="Center"
            Height="90" 
            Margin="0,10,0,0"  
            VerticalAlignment="Top"
            Width="953"
            Fill="{StaticResource MaCouleurPrincipale}"
            RadiusX="17" RadiusY="17"/>

        <!-- Title App -->
        <Label Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="42" FontFamily="Impact" Foreground="White" Margin="0,10,0,0" Height="90" Width="382" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ButtonLaunchSavesLeave" Content="{Binding [WPF_Leave]}" HorizontalAlignment="Left" Height="34" Margin="883,38,0,0" VerticalAlignment="Top" Width="64" FontSize="16" FontWeight="Bold" Click="ButtonLaunchSavesLeaveClick"/>

        <!-- Title Page -->
        <Label x:Name="LabelLaunchSavesTitle" Content="{Binding [View_StartBackup]}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Margin="0,120,0,0" Height="60" Width="612" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <!-- Choice Language -->
        <ComboBox x:Name="LanguageComboBox"
          HorizontalAlignment="Left"
          BorderBrush="Black"
          BorderThickness="2"
          Margin="867,120,0,0"
          VerticalAlignment="Top"
          Width="96"
          Height="40"
          SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="Français" Tag="fr"/>
                    <ComboBoxItem Content="English" Tag="en"/>
                    <ComboBoxItem Content="Русский" Tag="ru"/>
        </ComboBox>
        <!-- Menu Button -->
        <Button x:Name="ButtonLaunchSavesMenu" Content="{Binding [Controller_ChoiceMenu]}" HorizontalAlignment="Left" Height="40" Margin="10,120,0,0" VerticalAlignment="Top" Width="96" FontSize="16" FontWeight="Bold" Click="ButtonLaunchSavesMenuClick"/>

        <!-- Page Content -->
        <DataGrid Margin="90,229,507,126"
          BorderBrush="Black"
          BorderThickness="2">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ColumnLaunchSaves1" Header="Number" Width="*" />
                <DataGridTextColumn x:Name="ColumnLaunchSaves2" Header="Name" Width="3*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="InputLaunchSavesNumberSave" Width="240" Height="33" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1" Margin="577,308,0,0"/>
        <Button x:Name="ButtonLaunchSavesSavePartial" Content="{Binding [WPF_SavePartial]}" HorizontalAlignment="Left" Height="40" Margin="561,362,0,0" VerticalAlignment="Top" Width="272" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="ButtonLaunchSavesSaveOverall" Content="{Binding [WPF_SaveGlobal]}" HorizontalAlignment="Left" Height="40" Margin="561,460,0,0" VerticalAlignment="Top" Width="272" FontSize="16" FontWeight="Bold"/>

        <!-- FOOTER -->
        <Rectangle HorizontalAlignment="Center"
            Height="32" 
            Margin="0,629,0,0"  
            VerticalAlignment="Top"
            Width="973"
            Fill="{StaticResource MaCouleurPrincipale}"/>

        <Label x:Name="LabelLaunchSavesProperty" Content="{Binding [WPF_Property]}" HorizontalAlignment="Center" Margin="0,629,0,0" VerticalAlignment="Top" Height="32" Width="674" Background="Transparent" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="14" RenderTransformOrigin="0.511,-3.249"/>

    </Grid>
</Window>
