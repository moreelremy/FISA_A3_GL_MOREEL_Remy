<Window x:Class="EasySaveGUI.LaunchSaves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.ViewModel"
        xmlns:controls="clr-namespace:EasySaveGUI.Views"
        Title="EasySave LaunchSaves" 
        Style="{StaticResource WindowStyleWithRoundedCorners}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:LanguageHelper x:Key="LangHelper" />
    </Window.Resources>

    <Window.DataContext>
        <local:ExecuteSavesViewModel />

    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="115"/>
            <!-- Content -->
            <RowDefinition Height="*"/>
            <!-- Footer -->
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:Header Grid.Row="0"/>

        <Grid Grid.Row ="1">
            <!-- Title Page -->
            <Label x:Name="LabelLaunchSavesTitle"
                Content="{Binding Source={StaticResource LangHelper}, Path=[View_StartBackup]}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="40"
                FontFamily="Impact"
                Foreground="Black"
                Height="60"
                Width="612"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

            <!-- Page Content -->
            <DataGrid ItemsSource="{Binding Saves}" Margin="90,105,507,69"
          Style="{StaticResource CustomDataGridStyle}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedSave}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding name}" Header="Name" Width="3*" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBox x:Name="InputLaunchSavesNumberSave"
                Width="240"
                Height="44"
                FontSize="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="577,173,0,0"
                Text="{Binding SelectedSaveName, UpdateSourceTrigger=PropertyChanged}"/>

            <Button x:Name="ButtonLaunchSavesSavePartial"
                Content="{Binding Source={StaticResource LangHelper}, Path=[WPF_SavePartial]}"
                HorizontalAlignment="Left"
                Height="40"
                Margin="561,222,0,0"
                VerticalAlignment="Top"
                Width="272" FontSize="16"
                FontWeight="Bold"
                Style="{StaticResource CustomButtonStyle}"
                Command="{Binding ExecutePartialSaveCommand}"/>

            <Button x:Name="ButtonLaunchSavesSaveOverall"
                Content="{Binding Source={StaticResource LangHelper}, Path=[WPF_SaveGlobal]}"
                HorizontalAlignment="Left"
                Height="40"
                Margin="561,313,0,0"
                VerticalAlignment="Top"
                Width="272"
                FontSize="16"
                FontWeight="Bold"
                Style="{StaticResource CustomButtonStyle}"
                Command="{Binding ExecuteGlobalSaveCommand}"/>

        </Grid>

        <!-- FOOTER -->
        <controls:Footer Grid.Row="2"/>
    </Grid>
</Window>
