<Window x:Class="EasySaveGUI.CreateSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        xmlns:controls="clr-namespace:EasySaveGUI.Views"
        Title="EasySave CreateSave" 
        Style="{StaticResource WindowStyleWithRoundedCorners}"
        WindowStartupLocation="CenterScreen">

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="32"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:Header Grid.Row="0"/>

        <Grid Grid.Row ="1">
            <!-- Title Page -->
            <Label x:Name="LabelCreateSaveTitle" Content="{Binding [View_CreateBackup]}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Height="60" Width="612" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Choice Language -->
            <controls:BoxLanguage HorizontalAlignment="Left" VerticalAlignment="Top" Margin="863,0,0,0"/>

            <!-- Page Content -->
            <Grid HorizontalAlignment="Center" Height="313" VerticalAlignment="Top" Width="378" Margin="0,91,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LabelCreateSaveSaveName" Content="{Binding [WPF_SaveName]}"  HorizontalAlignment="Left" Height="28" Margin="1,0,0,0" VerticalAlignment="Top" Width="191" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                       Style="{StaticResource CustomLabelStyle}"/>
                <TextBox x:Name="InputCreateSaveSaveName"
                    HorizontalAlignment="Left"
                    Height="41"
                    Margin="0,33,0,0"
                    VerticalAlignment="Top"
                    Width="378"
                    Foreground="Gray"
                    GotFocus="TextBox_GotFocus"
                    LostFocus="TextBox_LostFocus" TextWrapping="Wrap" Grid.ColumnSpan="2"/>

                <Label x:Name="LabelCreateSaveOriginPath" Content="{Binding [WPF_SaveSource]}" HorizontalAlignment="Left" Height="28" Margin="2,85,0,0" VerticalAlignment="Top" Width="190" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                       Style="{StaticResource CustomLabelStyle}"/>
                <TextBox x:Name="InputCreateSaveOriginPath"
                    HorizontalAlignment="Left"
                    Height="41"
                    Margin="1,118,0,0"
                    VerticalAlignment="Top"
                    Width="290"
                    Foreground="Gray"
                    IsReadOnly="True"
                    MouseDoubleClick="TextBox_DoubleClick"
                    GotFocus="TextBox_GotFocus"
                    LostFocus="TextBox_LostFocus"/>
                <Button x:Name="ButtonCreateSaveOriginPath"
                    Content="{Binding [WPF_Folder]}"
                    Style="{StaticResource CustomButtonStyle}"
                    Margin="296,118,0,154"
                    Click="ButtonCreateSaveOriginPath_Click" Grid.ColumnSpan="2"/>

                <Label x:Name="LabelCreateSaveTargetPath" Content="{Binding [WPF_SaveTarget]}" HorizontalAlignment="Left" Height="28" Margin="2,176,0,0" VerticalAlignment="Top" Width="190" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                       Style="{StaticResource CustomLabelStyle}"/>
                <TextBox x:Name="InputCreateSaveTargetPath"
                    HorizontalAlignment="Left"
                    Height="41"
                    Margin="1,209,0,0"
                    VerticalAlignment="Top"
                    Width="290"
                    Foreground="Gray"
                    IsReadOnly="True"
                    MouseDoubleClick="TextBox_DoubleClick"
                    GotFocus="TextBox_GotFocus"
                    LostFocus="TextBox_LostFocus"/>
                <Button x:Name="ButtonCreateSaveTargetPath"
                    Content="{Binding [WPF_Folder]}"
                    Margin="296,209,0,63"
                    Click="ButtonCreateSaveTargetPath_Click"
                        Style="{StaticResource CustomButtonStyle}" Grid.ColumnSpan="2"/>


                <RadioButton x:Name="CheckboxCreateSaveComplete" Content="{Binding [View_FullSave]}" 
                    HorizontalAlignment="Left" 
                    Height="15" 
                    Margin="102,267,0,0" 
                    VerticalAlignment="Top" 
                    Width="208" 
                    IsChecked="True"/>

                <RadioButton x:Name="CheckboxCreateSaveDifferential" Content="{Binding [View_DifferentialSave]}" 
                    HorizontalAlignment="Left" 
                    Height="16" 
                    Margin="102,287,0,0" 
                    VerticalAlignment="Top" 
                    Width="208" 
                  />

            </Grid>

            <Button x:Name="ButtonCreateSaveCreate" Content="{Binding [WPF_Create]}" Height="40" Margin="0,433,0,0" VerticalAlignment="Top" Width="178" FontSize="16" FontWeight="Bold" Click="ButtonCreateSaveCreate_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
        </Grid>
        <!-- FOOTER -->
        <controls:Footer Grid.Row="2"/>
    </Grid>
</Window>
