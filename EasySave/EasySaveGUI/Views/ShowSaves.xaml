<Window x:Class="EasySaveGUI.ShowSaves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        xmlns:controls="clr-namespace:EasySaveGUI.Views"
        Title="EasySave ShowSaves" 
        Style="{StaticResource WindowStyleWithRoundedCorners}"
        WindowStartupLocation="CenterScreen">

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="32"/>
            <!-- Footer  -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:Header Grid.Row="0"/>


        <Grid Grid.Row ="1">
            <!-- Title Page -->
            <Label x:Name="LabelShowSavesTitle" Content="{Binding [View_ViewAllSaves]}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Height="60" Width="612" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Choice Language -->
            <controls:BoxLanguage HorizontalAlignment="Left" VerticalAlignment="Top" Margin="863,0,0,0"/>

            <!-- Page Content -->
            <DataGrid Margin="42,79,42,87"
              Style="{StaticResource CustomDataGridStyle}">
                <DataGrid.Columns>
                    <!-- Définir un nom pour pouvoir accéder à cette colonne dans le code-behind -->
                    <DataGridTextColumn x:Name="ColumnShowSaves1" Header="Numéro" Width="0.3*" />
                    <DataGridTextColumn x:Name="ColumnShowSaves2" Header="Nom" Width="0.8*" />
                    <DataGridTextColumn x:Name="ColumnShowSaves3" Header="Source" Width="*" />
                    <DataGridTextColumn x:Name="ColumnShowSaves4" Header="Cible" Width="*" />
                    <DataGridTextColumn x:Name="ColumnShowSaves5" Header="Type de Sauvegarde" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid HorizontalAlignment="Center" Margin="0,452,0,0" VerticalAlignment="Top" Width="404">

                <Button x:Name="ButtonShowSavesDeleteSave" Content="{Binding [WPF_Delete]}" HorizontalAlignment="Left" Height="40" Margin="272,0,0,0" VerticalAlignment="Top" Width="132" FontSize="16" FontWeight="Bold"
                        Style="{StaticResource CustomButtonStyle}"/>
                <TextBox x:Name="InputShowSavesDeleteSave" 
                    Width="246" 
                    Height="40" 
                    FontSize="16" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" />

            </Grid>

        </Grid>


        <!-- FOOTER -->
        <controls:Footer Grid.Row="2"/>
    </Grid>
</Window>
