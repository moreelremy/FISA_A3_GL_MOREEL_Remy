<Window x:Class="EasySaveGUI.ShowLogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        Title="EasySave ShowLogs" 
        ResizeMode="NoResize" 
        MinWidth="973" MinHeight="661" 
        Width="973" Height="661"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Définition des couleurs -->
        <SolidColorBrush x:Key="MaCouleurPrincipale" Color="#280068"/>
    </Window.Resources>

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <!--- CONTENU DE LA PAGE-->

        <!-- HEADER -->
        <Rectangle HorizontalAlignment="Center"
            Height="90" 
            Margin="0,10,0,0"  
            VerticalAlignment="Top"
            Width="953"
            Fill="{StaticResource MaCouleurPrincipale}"
            RadiusX="17" RadiusY="17"/>

        <!-- Title App -->
        <Label Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="42" FontFamily="Impact" Foreground="White" Margin="0,10,0,0" Height="90" Width="382" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ButtonLogsLeave" Content="{Binding [WPF_Leave]}" HorizontalAlignment="Left" Height="34" Margin="883,38,0,0" VerticalAlignment="Top" Width="64" FontSize="16" FontWeight="Bold" Click="ButtonLogsLeaveClick"/>


        <!-- Title Page -->
        <Label x:Name="LabelLogsTitlePage" Content="{Binding [ControllerView_ViewLogs]}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Margin="0,120,0,0" Height="60" Width="612" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <!-- Choice Language -->
        <ComboBox x:Name="LanguageComboBox"
          HorizontalAlignment="Left"
          BorderBrush="Black"
          BorderThickness="2"
          Margin="867,120,0,0"
          VerticalAlignment="Top"
          Width="96"
          Height="40"
          SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Français" Tag="fr"/>
            <ComboBoxItem Content="English" Tag="en"/>
            <ComboBoxItem Content="Русский" Tag="ru"/>
        </ComboBox>
        
        <!-- Menu Button -->
        <Button x:Name="ButtonLogsMenu" Content="{Binding [Controller_ChoiceMenu]}" HorizontalAlignment="Left" Height="40" Margin="10,120,0,0" VerticalAlignment="Top" Width="96" FontSize="16" FontWeight="Bold" Click="ButtonLogsMenuClick"/>

        <!-- Page Content -->
        <TextBox x:Name="InputLogsSearch" 
             Width="246" 
             Height="40" 
             FontSize="16" 
             HorizontalAlignment="Left" 
             VerticalAlignment="Top" 
             BorderBrush="Black" 
             BorderThickness="2" 
             Margin="296,194,0,0"/>

        <Button x:Name="ButtonLogsSearch" 
            Content="{Binding [WPF_Search]}" 
            HorizontalAlignment="Left" 
            Height="40" 
            Margin="560,194,0,0" 
            VerticalAlignment="Top" 
            Width="122" 
            FontSize="16" 
            FontWeight="Bold"/>
        
        <DataGrid Margin="18,251,18,54" 
          Background="White" 
          BorderBrush="Black"
          BorderThickness="2"
          Foreground="#FF280068">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ColumnLogs1" Header="Date" Width="*" />
                <DataGridTextColumn x:Name="ColumnLogs2" Header="Nom Save" Width="*" />
                <DataGridTextColumn x:Name="ColumnLogs3" Header="Source" Width="*" />
                <DataGridTextColumn x:Name="ColumnLogs4" Header="Cible" Width="*" />
                <DataGridTextColumn x:Name="ColumnLogs5" Header="Size" Width="*" />
                <DataGridTextColumn x:Name="ColumnLogs6" Header="Transfer Time" Width="*" />

            </DataGrid.Columns>
        </DataGrid>
        
        <!-- FOOTER -->
        <Rectangle HorizontalAlignment="Center"
            Height="32" 
            Margin="0,629,0,0"  
            VerticalAlignment="Top"
            Width="973"
            Fill="{StaticResource MaCouleurPrincipale}"/>

        <Label x:Name="LabelLogsProperty" Content="{Binding [WPF_Property]}" HorizontalAlignment="Center" Margin="0,629,0,0" VerticalAlignment="Top" Height="32" Width="674" Background="Transparent" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="14" RenderTransformOrigin="0.511,-3.249"/>

    </Grid>
</Window>
