<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.ViewModel"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="EasySaveGUI.SettingsWindow"
        Title="Settings"
        Height="500"
        Width="600"
        MinHeight="500"
        MinWidth="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:LanguageHelper x:Key="LangHelper" />
    </Window.Resources>

    <Window.DataContext>
        <local:SettingsWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Rectangle -->
        <Grid Grid.Row="0" Height="50">
            <!-- Rectangle in the header with rounded corners -->
            <Rectangle Width="600" Height="50" Fill="{StaticResource MaCouleurPrincipale}" />
            <Label Content="{Binding [WPF_SettingTitle], Source={StaticResource LangHelper}}"
                   FontSize="22"
                   FontFamily="Impact"
                   Foreground="White"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"/>
        </Grid>

        <!-- Content -->
        <Canvas Grid.Row="1" Margin="20">
            <!-- LabelExtension -->
            <Label x:Name="LabelExtension"
                   Content="{Binding [WPF_SettingExtensionsToCrypt], Source={StaticResource LangHelper}}"
                   Style="{StaticResource CustomLabelStyle}"
                   Canvas.Top="40" 
                   Canvas.Left="21" HorizontalAlignment="Left" Height="36" VerticalAlignment="Center" Width="230"/>

            <!-- InputExtension -->
            <TextBox x:Name="InputExtensionsToCrypt"
                     Text="{Binding InputSettingsExtensionsToCrypt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="230" Height="49"
                     Canvas.Top="81"
                     Canvas.Left="21" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- LabelSetting -->
            <Label x:Name="LabelSetting"
                   Content="{Binding [WPF_SettingSoftware], Source={StaticResource LangHelper}}"
                   Style="{StaticResource CustomLabelStyle}"
                   Canvas.Top="174" 
                   Canvas.Left="21" Height="36" Width="230" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- InputSetting -->
            <TextBox x:Name="InputSetting"
                     Text="{Binding InputSettingsSoftware, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="230" Height="49"
                     Canvas.Top="215"
                     Canvas.Left="21" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- Apply Button -->
            <Button Content="{Binding [WPF_SettingApply], Source={StaticResource LangHelper}}"
                    Command="{Binding ApplySettingCommand}"
                    Style="{StaticResource CustomButtonStyle}"
                    HorizontalAlignment="Center"
                    Width="164" Height="45"
                    Canvas.Top="305"
                    Canvas.Left="198" VerticalAlignment="Top"
                    FontSize="20"/>
            <Label x:Name="LabelExtensionsToPrioritize"
                    Content="{Binding [WPF_SettingExtensionsToPrioritize], Source={StaticResource LangHelper}}"
                    Style="{StaticResource CustomLabelStyle}"
                    Canvas.Top="40" 
                    Canvas.Left="309" Height="36" Width="230" HorizontalAlignment="Left" VerticalAlignment="Center"/>


            <TextBox x:Name="InputExtensionsToPrioritize"
                Text="{Binding InputSettingsExtensionsToPrioritize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="230" Height="49"
                Canvas.Top="81"
                Canvas.Left="309" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            
            <Label x:Name="LabelSaturationLimit"
                Content="{Binding [WPF_SettingSaturationLimit], Source={StaticResource LangHelper}}"
                Style="{StaticResource CustomLabelStyle}"
                Canvas.Top="174" 
                Canvas.Left="309" Height="36" Width="230" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            
            <TextBox x:Name="InputSettingSaturationLimit"
                PreviewTextInput="TextBox_PreviewTextInput"
                Text="{Binding InputSaturationLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="230" Height="49"
                Canvas.Top="215"
                Canvas.Left="309" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>
