<Window x:Class="EasySaveGUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.ViewModel"
        Title="Settings"
        Height="500"
        Width="600"
        MinHeight="500"
        MinWidth="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:LanguageHelper x:Key="LangHelper" />
    </Window.Resources>

    <Window.DataContext>
        <local:SettingsWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Rectangle -->
        <Grid Grid.Row="0" Height="50">
            <!-- Rectangle in the header with rounded corners -->
            <Rectangle Width="600" Height="50" Fill="{StaticResource MaCouleurPrincipale}" />
            <Label Content="{Binding Source={StaticResource LangHelper}, Path=[WPF_SettingTitle]}"
                   FontSize="22"
                   FontFamily="Impact"
                   Foreground="White"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"/>
        </Grid>

        <!-- Content -->
        <Canvas Grid.Row="1" Margin="20">
            <!-- LabelExtension -->
            <Label x:Name="LabelExtension"
                   Content="{Binding Source={StaticResource LangHelper}, Path=[WPF_SettingExtensionToCrypt]}"
                   Style="{StaticResource CustomLabelStyle}"
                   Canvas.Top="35" 
                   Canvas.Left="102" HorizontalAlignment="Left" Height="36" VerticalAlignment="Center" Width="356"/>

            <!-- InputExtension -->
            <TextBox x:Name="InputExtension"
                     Text="{Binding InputSettingsExtension, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     Width="356" Height="49"
                     Canvas.Top="81"
                     Canvas.Left="102" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- LabelSetting -->
            <Label x:Name="LabelSetting"
                   Content="{Binding Source={StaticResource LangHelper}, Path=[WPF_SettingSoftware]}"
                   Style="{StaticResource CustomLabelStyle}"
                   Canvas.Top="173" 
                   Canvas.Left="102" Height="36" Width="356" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- InputSetting -->
            <TextBox x:Name="InputSetting"
                     Text="{Binding InputSettingsSoftware, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     Width="356" Height="49"
                     Canvas.Top="218"
                     Canvas.Left="102" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- Apply Button -->
            <Button Content="{Binding Source={StaticResource LangHelper}, Path=[WPF_SettingApply]}"
                    Command="{Binding SaveSettingCommand}"
                    Style="{StaticResource CustomButtonStyle}"
                    HorizontalAlignment="Center"
                    Width="164" Height="45"
                    Canvas.Top="305"
                    Canvas.Left="198" VerticalAlignment="Top"
                    FontSize="20"/>
        </Canvas>
    </Grid>
</Window>
