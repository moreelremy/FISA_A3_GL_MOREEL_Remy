<Window x:Class="EasySaveGUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="173"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="InputSetting" Margin="72,8,72,8" Grid.Row="1"/>
        <Button Content="Save" Width="100" Height="30" Margin="150,77,150,-45" Grid.Row="1" Click="SaveSetting"/>
    </Grid>
</Window>
