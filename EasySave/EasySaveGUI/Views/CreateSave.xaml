<Window x:Class="EasySaveGUI.CreateSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        Title="EasySave CreateSave" 
        ResizeMode="NoResize" 
        MinWidth="973" MinHeight="661" 
        Width="973" Height="661"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Définition des couleurs -->
        <SolidColorBrush x:Key="MaCouleurPrincipale" Color="#280068"/>
    </Window.Resources>



    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <!--- CONTENU DE LA PAGE-->

        <!-- HEADER -->
        <Rectangle HorizontalAlignment="Center"
            Height="90" 
            Margin="0,10,0,0"  
            VerticalAlignment="Top"
            Width="953"
            Fill="{StaticResource MaCouleurPrincipale}"
            RadiusX="17" RadiusY="17"/>

        <!-- Title App -->
        <Label Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="42" FontFamily="Impact" Foreground="White" Margin="0,10,0,0" Height="90" Width="382" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ButtonCreateSaveLeave" Content="{Binding [WPF_Leave]}" HorizontalAlignment="Left" Height="34" Margin="883,38,0,0" VerticalAlignment="Top" Width="64" FontSize="16" FontWeight="Bold" Click="ButtonCreateSaveLeaveClick"/>

        <!-- Title Page -->
        <Label x:Name="LabelCreateSaveTitle" Content="{Binding [View_CreateBackup]}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Margin="0,120,0,0" Height="60" Width="612" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <!-- Choice Language -->
        <ComboBox x:Name="LanguageComboBox"
          HorizontalAlignment="Left"
          BorderBrush="Black"
          BorderThickness="2"
          Margin="867,120,0,0"
          VerticalAlignment="Top"
          Width="96"
          Height="40"
          SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Français" Tag="fr"/>
            <ComboBoxItem Content="English" Tag="en"/>
            <ComboBoxItem Content="Русский" Tag="ru"/>
        </ComboBox>

        <!-- Menu Button -->
        <Button x:Name="ButtonCreateSaveMenu" Content="{Binding [Controller_ChoiceMenu]}" HorizontalAlignment="Left" Height="40" Margin="10,120,0,0" VerticalAlignment="Top" Width="96" FontSize="16" FontWeight="Bold" Click="ButtonCreateSaveMenuClick"/>

        <!-- Page Content -->
        <Label x:Name="LabelCreateSaveSaveName" Content="{Binding [WPF_SaveName]}" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="28" Margin="281,212,0,0" VerticalAlignment="Top" Width="191" Background="#FFB5B5B5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="InputCreateSaveSaveName"
         BorderBrush="Black"
         BorderThickness="1"
         HorizontalAlignment="Left"
         Height="30"
         Margin="280,245,0,0"
         VerticalAlignment="Top"
         Width="378"
         Background="#FFB5B5B5"
         Foreground="Gray"
         Text="Entrez un nom de sauvegarde"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus" TextWrapping="Wrap"/>

        <Label x:Name="LabelCreateSaveOriginPath" Content="{Binding [WPF_SaveSource]}"  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="28" Margin="282,297,0,0" VerticalAlignment="Top" Width="190" Background="#FFB5B5B5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="InputCreateSaveOriginPath"
         BorderBrush="Black"
         BorderThickness="1"
         HorizontalAlignment="Left"
         Height="30"
         Margin="281,330,0,0"
         VerticalAlignment="Top"
         Width="296"
         Background="#FFB5B5B5"
         Foreground="Gray"
         IsReadOnly="True"
         MouseDoubleClick="TextBox_DoubleClick"
         Text="Sélectionnez un fichier source"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus"/>
        <Button x:Name="ButtonCreateSaveOriginPath"
        Content="{Binding [WPF_Folder]}"
        BorderBrush="Black"
        BorderThickness="1"
        Margin="576,330,315,301"
        Background="#FFB5B5B5"
        Click="ButtonCreateSaveOriginPath_Click"/>

        <Label x:Name="LabelCreateSaveTargetPath" Content="{Binding [WPF_SaveTarget]}" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="28" Margin="282,388,0,0" VerticalAlignment="Top" Width="190" Background="#FFB5B5B5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="InputCreateSaveTargetPath"
         BorderBrush="Black"
         BorderThickness="1"
         HorizontalAlignment="Left"
         Height="30"
         Margin="281,421,0,0"
         VerticalAlignment="Top"
         Width="296"
         Background="#FFB5B5B5"
         Foreground="Gray"
         IsReadOnly="True"
         MouseDoubleClick="TextBox_DoubleClick"
         Text="Sélectionnez un dossier de destination"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus"/>
        <Button x:Name="ButtonCreateSaveTargetPath"
        Content="{Binding [WPF_Folder]}"
        BorderBrush="Black"
        BorderThickness="1"
        Margin="576,421,315,210"
        Background="#FFB5B5B5"
        Click="ButtonCreateSaveTargetPath_Click"/>


        <RadioButton x:Name="CheckboxCreateSaveComplete" Content="{Binding [View_FullSave]}" 
              HorizontalAlignment="Center" 
              Height="15" 
              Margin="0,479,0,0" 
              VerticalAlignment="Top" 
              Width="208" 
              IsChecked="True"/>

        <RadioButton x:Name="CheckboxCreateSaveDifferential" Content="{Binding [View_DifferentialSave]}" 
              HorizontalAlignment="Center" 
              Height="16" 
              Margin="0,499,0,0" 
              VerticalAlignment="Top" 
              Width="208" 
              />

            <Button x:Name="ButtonCreateSaveCreate" Content="{Binding [WPF_Create]}" HorizontalAlignment="Left" Height="40" Margin="421,550,0,0" VerticalAlignment="Top" Width="96" FontSize="16" FontWeight="Bold" Click="ButtonCreateSaveCreate_Click"/>

        <!-- FOOTER -->
        <Rectangle HorizontalAlignment="Center"
                   Height="32" 
                   Margin="0,629,0,0"  
                   VerticalAlignment="Top"
                   Width="973"
                   Fill="{StaticResource MaCouleurPrincipale}"/>

        <Label x:Name="LabelCreateSaveProperty" Content="{Binding [WPF_Property]}" HorizontalAlignment="Center" Margin="0,629,0,0" VerticalAlignment="Top" Height="32" Width="674" Background="Transparent" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="14" RenderTransformOrigin="0.511,-3.249"/>

    </Grid>
</Window>
