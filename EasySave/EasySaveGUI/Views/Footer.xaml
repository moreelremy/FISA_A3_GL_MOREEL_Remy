<UserControl x:Class="EasySaveGUI.Views.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasySaveGUI.Helpers">

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <!-- FOOTER -->
        <Rectangle HorizontalAlignment="Center"
                   Height="32" 
                   VerticalAlignment="Bottom"
                   Width="973"
                   Fill="{StaticResource MaCouleurPrincipale}"/>

        <Label x:Name="LabelFooterProperty" 
               Content="{Binding [WPF_Property]}" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Height="32" 
               Width="674" 
               Background="Transparent" 
               Foreground="White" 
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Center" 
               FontFamily="Arial" 
               FontSize="14"/>
    </Grid>
</UserControl>
