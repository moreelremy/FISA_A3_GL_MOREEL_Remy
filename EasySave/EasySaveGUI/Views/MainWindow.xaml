<Window x:Class="EasySaveGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        Title="EasySave Menu" 
        ResizeMode="NoResize"
        MinWidth="973" MinHeight="661" 
        Width="973" Height="661"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Définition des couleurs -->
        <SolidColorBrush x:Key="MaCouleurPrincipale" Color="#280068"/>
    </Window.Resources>

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="216*"/>
            <RowDefinition Height="445*"/>
        </Grid.RowDefinitions>
        <!-- HEADER -->
        <Rectangle HorizontalAlignment="Center"
                   Height="90" 
                   Margin="0,10,0,0"  
                   VerticalAlignment="Top"
                   Width="953"
                   Fill="{StaticResource MaCouleurPrincipale}"
                   RadiusX="17" RadiusY="17"/>

        <!-- Titre Application -->
        <Label Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="42" FontFamily="Impact" Foreground="White" Margin="0,10,0,0" Height="90" Width="382" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ButtonMenuLeave" Content="{Binding [WPF_Leave]}" HorizontalAlignment="Left" Height="34" Margin="883,38,0,0" VerticalAlignment="Top" Width="64" FontSize="16" FontWeight="Bold" Click="ButtonMenuLeaveClick"/>

        <!--- CONTENU DE LA PAGE-->

        <!-- Titre de la page -->
        <Label x:Name="LabelMenuTitlePage" 
       Content="{Binding [Controller_ChoiceMenu]}" 
       HorizontalAlignment="Center" 
       VerticalAlignment="Top" 
       FontSize="40" 
       FontFamily="Arial" 
       Foreground="Black" 
       Margin="0,120,0,0" 
       Height="60" 
       Width="612" 
       HorizontalContentAlignment="Center" 
       VerticalContentAlignment="Center"/>





        <!-- MENU BUTTONS -->
        <Button x:Name="ButtonMenuCreateSave" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [View_CreateBackup]}" HorizontalAlignment="Left" 
            Height="102" Margin="84,28,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuCreateSaveClick" Grid.Row="1"/>

        <Button x:Name="ButtonMenuLaunchSave" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [View_StartBackup]}" HorizontalAlignment="Left" 
            Height="102" Margin="540,28,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuLaunchSavesClick" Grid.Row="1"/>

        <Button x:Name="ButtonMenuShowSave" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [View_ViewAllSaves]}" HorizontalAlignment="Left" 
            Height="104" Margin="84,192,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuShowSavesClick" Grid.Row="1"/>

        <Button x:Name="ButtonMenuShowLogs" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [ControllerView_ViewLogs]}" HorizontalAlignment="Left" 
            Height="104" Margin="540,192,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuShowLogsClick" Grid.Row="1"/>
        <!-- Choix de la langue-->
        <ComboBox x:Name="LanguageComboBox"
          HorizontalAlignment="Left"
          BorderBrush="Black"
          BorderThickness="2"
          Margin="867,120,0,0"
          VerticalAlignment="Top"
          Width="96"
          Height="40"
          SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Français" Tag="fr"/>
            <ComboBoxItem Content="English" Tag="en"/>
            <ComboBoxItem Content="Русский" Tag="ru"/>
        </ComboBox>



        <!-- FOOTER -->
        <Rectangle HorizontalAlignment="Center"
                   Height="32" 
                   Margin="0,413,0,0"  
                   VerticalAlignment="Top"
                   Width="973"
                   Fill="{StaticResource MaCouleurPrincipale}" Grid.Row="1"/>
        <Label x:Name="LabelMenuProperty" Content="{Binding [WPF_Property]}" HorizontalAlignment="Center" Margin="0,413,0,0" VerticalAlignment="Top" Height="32" Width="674" Background="Transparent" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="14" RenderTransformOrigin="0.511,-3.249" Grid.Row="1"/>
    </Grid>
</Window>
