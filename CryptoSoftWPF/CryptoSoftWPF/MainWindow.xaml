<Window x:Class="CryptoSoftWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave Menu" 
        ResizeMode="NoResize"
        MinWidth="653" MinHeight="478" 
        Width="653" Height="478"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="MaCouleurPrincipale" Color="#680000"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Rectangle
            Grid.Row="0"
            Height="90"
            VerticalAlignment="Center"
            Fill="{StaticResource MaCouleurPrincipale}"
            RadiusX="17" RadiusY="17" Margin="10,0,10,0"/>

        <Label Grid.Row="0"
               Content="CryptoSoft"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="42"
               FontFamily="Impact"
               Foreground="White"
               Height="90"
               Width="382"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>

        <Button x:Name="ButtonLeave" 
            Width="50" 
            Height="50" 
            Background="White" 
            Foreground="{StaticResource MaCouleurPrincipale}" 
            BorderThickness="2" 
            FontSize="33" 
            Content="⏻" 
            Click="ButtonLeaveClick" 
            FlowDirection="RightToLeft" 
            Margin="578,0,0,0" 
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center" 
            FontWeight="Bold" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" FontFamily="Arial">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
            BorderBrush="{StaticResource MaCouleurPrincipale}"
            BorderThickness="2"
            CornerRadius="16">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- CONTENU DE LA PAGE -->
        <Canvas Grid.Row="1">
            <!-- Nom de la sauvegarde -->
            <Label x:Name="LabelEncryptionKey"
                   Content="Encryption key"
                   
                   Style="{StaticResource CustomLabelStyle}"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Padding="5"
                   Canvas.Left="159" Canvas.Top="146" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBox x:Name="InputEncryptionKey"
                     Text=""
                     TextWrapping="Wrap"
                     Padding="5"
                     Canvas.Left="159" Canvas.Top="180" Width="336" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- Chemin d'origine -->
            <Label x:Name="LabelPathFile"
                   Content="Path File"

                   Style="{StaticResource CustomLabelStyle}"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Padding="5"
                   Canvas.Left="159" Canvas.Top="55" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>


            <TextBox x:Name="InputPathFile"
                         Text=""
                         Foreground="Black"
                         IsReadOnly="True"
                         Background="#D9D9D9"
                         MouseDoubleClick="TextBox_DoubleClick"
                         Padding="5"
                         Width="244" Canvas.Left="159" Canvas.Top="89" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button x:Name="ButtonFile"
                        Content="File"
                        Click="ButtonFileClick"
                        Width="87" Canvas.Left="408" Canvas.Top="89" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button x:Name="ButtonCrypt"
                Content="CRYPT"
                Click="ButtonCryptClick"
                Width="137" Canvas.Left="258" Canvas.Top="242" Height="28" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Style="{StaticResource CustomButtonStyle}"/>

        </Canvas>

        <!-- FOOTER -->
        <Rectangle Grid.Row="2"
                   HorizontalAlignment="Stretch"
                   Height="32"
                   Margin="0"
                   VerticalAlignment="Bottom"
                   Fill="{StaticResource MaCouleurPrincipale}"/>

        <Label x:Name="LabelMenuProperty"
               Grid.Row="2"
               Content="Group 1 property"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Height="32"
               Background="Transparent"
               Foreground="White"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontFamily="Arial"
               FontSize="14"/>
    </Grid>
</Window>
