<Window x:Class="EasySaveGUI.LaunchSaves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        xmlns:controls="clr-namespace:EasySaveGUI.Views"
        Title="EasySave LaunchSaves" 
        Style="{StaticResource WindowStyleWithRoundedCorners}"
        WindowStartupLocation="CenterScreen">

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="32"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:Header Grid.Row="0"/>

        <Grid Grid.Row ="1">
            <!-- Title Page -->
            <Label x:Name="LabelLaunchSavesTitle" Content="{Binding [View_StartBackup]}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Height="60" Width="612" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Choice Language -->
            <controls:BoxLanguage HorizontalAlignment="Left" VerticalAlignment="Top" Margin="863,0,0,0"/>

            <!-- Page Content -->
            <DataGrid Margin="90,105,507,69"
              Style="{StaticResource CustomDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="ColumnLaunchSaves1" Header="Number" Width="*" />
                    <DataGridTextColumn x:Name="ColumnLaunchSaves2" Header="Name" Width="3*" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBox x:Name="InputLaunchSavesNumberSave" Width="240" Height="33" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1" Margin="577,184,0,0"/>
            <Button x:Name="ButtonLaunchSavesSavePartial" Content="{Binding [WPF_SavePartial]}" HorizontalAlignment="Left" Height="40" Margin="561,222,0,0" VerticalAlignment="Top" Width="272" FontSize="16" FontWeight="Bold" Style="{StaticResource CustomButtonStyle}"/>
            <Button x:Name="ButtonLaunchSavesSaveOverall" Content="{Binding [WPF_SaveGlobal]}" HorizontalAlignment="Left" Height="40" Margin="561,313,0,0" VerticalAlignment="Top" Width="272" FontSize="16" FontWeight="Bold" Style="{StaticResource CustomButtonStyle}"/>
        </Grid>

        <!-- FOOTER -->
        <controls:Footer Grid.Row="2"/>
    </Grid>
</Window>
