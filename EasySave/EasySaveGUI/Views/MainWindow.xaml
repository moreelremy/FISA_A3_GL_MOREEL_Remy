<Window x:Class="EasySaveGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        Title="EasySave Menu" 
        ResizeMode="NoResize"
        MinWidth="973" MinHeight="661" 
        Width="973" Height="661"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Définition des couleurs -->
        <SolidColorBrush x:Key="MaCouleurPrincipale" Color="#280068"/>
    </Window.Resources>

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <!-- HEADER -->
        <Rectangle HorizontalAlignment="Center"
                   Height="90" 
                   Margin="0,10,0,0"  
                   VerticalAlignment="Top"
                   Width="953"
                   Fill="{StaticResource MaCouleurPrincipale}"
                   RadiusX="17" RadiusY="17"/>

        <!-- Titre Application -->
        <Label Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="42" FontFamily="Impact" Foreground="White" Margin="0,10,0,0" Height="90" Width="382" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ButtonMenuLeave" Content="{Binding [WPF_Leave]}" HorizontalAlignment="Left" Height="34" Margin="883,38,0,0" VerticalAlignment="Top" Width="64" FontSize="16" FontWeight="Bold" Click="ButtonMenuLeaveClick"/>

        <!--- CONTENU DE LA PAGE-->

        <!-- Titre de la page -->
        <Label x:Name="LabelMenuTitlePage" 
       Content="{Binding [Controller_ChoiceMenu]}" 
       HorizontalAlignment="Center" 
       VerticalAlignment="Top" 
       FontSize="40" 
       FontFamily="Arial" 
       Foreground="Black" 
       Margin="0,120,0,0" 
       Height="60" 
       Width="612" 
       HorizontalContentAlignment="Center" 
       VerticalContentAlignment="Center"/>





        <!-- MENU BUTTONS -->
        <Button x:Name="ButtonMenuCreateSave" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [View_CreateBackup]}" HorizontalAlignment="Left" 
            Height="102" Margin="84,244,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuCreateSaveClick"/>

        <Button x:Name="ButtonMenuLaunchSave" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [View_StartBackup]}" HorizontalAlignment="Left" 
            Height="102" Margin="540,244,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuLaunchSavesClick"/>

        <Button x:Name="ButtonMenuShowSave" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [View_ViewAllSaves]}" HorizontalAlignment="Left" 
            Height="104" Margin="84,408,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuShowSavesClick"/>

        <Button x:Name="ButtonMenuShowLogs" BorderBrush="Black" BorderThickness="2" 
            Content="{Binding [ControllerView_ViewLogs]}" HorizontalAlignment="Left" 
            Height="104" Margin="540,408,0,0" VerticalAlignment="Top" 
            Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuShowLogsClick"/>
        <!-- Choix de la langue-->
        <ComboBox HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="2"
          Margin="867,120,0,0" VerticalAlignment="Top" Width="96" Height="40"
          SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Français" Tag="fr" IsSelected="True"/>
            <ComboBoxItem Content="English" Tag="en"/>
            <ComboBoxItem Content="Русский" Tag="ru"/>
        </ComboBox>


        <!-- FOOTER -->
        <Rectangle HorizontalAlignment="Center"
                   Height="32" 
                   Margin="0,629,0,0"  
                   VerticalAlignment="Top"
                   Width="973"
                   Fill="{StaticResource MaCouleurPrincipale}"/>
        <Label x:Name="LabelMenuProperty" Content="@Propriété du groupe 1" HorizontalAlignment="Center" Margin="0,629,0,0" VerticalAlignment="Top" Height="32" Width="674" Background="Transparent" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="14" RenderTransformOrigin="0.511,-3.249"/>
    </Grid>
</Window>
