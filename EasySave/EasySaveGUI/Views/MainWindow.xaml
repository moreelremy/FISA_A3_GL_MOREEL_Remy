<Window x:Class="EasySaveGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveGUI.Helpers"
        xmlns:controls="clr-namespace:EasySaveGUI.Views"
        Title="EasySave Menu" 
        Style="{StaticResource WindowStyleWithRoundedCorners}"
        WindowStartupLocation="CenterScreen">

    <Grid DataContext="{x:Static local:LanguageHelper.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="32"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:Header Grid.Row="0"/>

        <Grid Grid.Row="1">
            <!-- Titre de la page -->
            <Label x:Name="LabelMenuTitlePage" 
                   Content="{Binding [Controller_ChoiceMenu]}" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Impact" Foreground="Black" Height="60" Width="197" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Choice Language -->
            <controls:BoxLanguage HorizontalAlignment="Left" VerticalAlignment="Top" Margin="863,0,0,0" Width="166"/>
            
            <!-- MENU BUTTONS -->
            <Button x:Name="ButtonMenuCreateSave" BorderThickness="2" 
                    Content="{Binding [View_CreateBackup]}" HorizontalAlignment="Left" 
                    Height="102" Margin="84,146,0,0" VerticalAlignment="Top" 
                    Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuCreateSaveClick"
                    Style="{StaticResource CustomButtonStyle}"/>

            <Button x:Name="ButtonMenuLaunchSave" BorderThickness="2" 
                    Content="{Binding [View_StartBackup]}" HorizontalAlignment="Left" 
                    Height="102" Margin="540,146,0,0" VerticalAlignment="Top" 
                    Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuLaunchSavesClick"
                    Style="{StaticResource CustomButtonStyle}"/>

            <Button x:Name="ButtonMenuShowSave" BorderThickness="2" 
                    Content="{Binding [View_ViewAllSaves]}" HorizontalAlignment="Left" 
                    Height="104" Margin="84,322,0,0" VerticalAlignment="Top" 
                    Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuShowSavesClick"
                    Style="{StaticResource CustomButtonStyle}"/>

            <Button x:Name="ButtonMenuShowLogs" BorderThickness="2" 
                    Content="{Binding [ControllerView_ViewLogs]}" HorizontalAlignment="Left" 
                    Height="104" Margin="540,322,0,0" VerticalAlignment="Top" 
                    Width="356" FontWeight="Bold" FontSize="22" Click="ButtonMenuShowLogsClick"
                    Style="{StaticResource CustomButtonStyle}"/>

        </Grid>



        <!-- FOOTER -->
        <controls:Footer Grid.Row="2"/>
    </Grid>
</Window>
